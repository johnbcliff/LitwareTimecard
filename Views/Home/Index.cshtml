@model LitwareTimecard.Models.TimecardEntry

@{
    ViewBag.Title = "Timecard";
}
<div class="container">
    <div class="row">
        <div class='col-sm-6'>
            @using (Html.BeginForm())
            {
                <fieldset>
                    <h1>Enter Time</h1>


                    <div class="form-group">
                        @Html.LabelFor(model => model.date)
                        @Html.TextBoxFor(model => model.date, new { @class = "form-control datepicker", id = "datetimepicker4" })

                    </div>
                    <script type="text/javascript">
                        $(function () {
                            $('#datetimepicker4').datetimepicker({
                                format: 'MM/DD/YYYY'
                            });
                        });
                    </script>

                    <div class="form-group">
                        @Html.LabelFor(model => model.hours)
                        <div class="editor-field">
                            @Html.TextBoxFor(model => model.hours, new { @class = "form-control" })
                        </div>
                    </div>

                    <button type="submit" class="btn btn-default">Submit Time</button>
                </fieldset>
            }
        </div>
    </div>
</div>
